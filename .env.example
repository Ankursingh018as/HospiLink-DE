# HospiLink Environment Configuration Template
# Copy this file to .env and fill in your actual credentials

# Database Configuration
DB_HOST=localhost
DB_USERNAME=root
DB_PASSWORD=your_database_password_here
DB_NAME=hospilink

# Timezone Configuration
TIMEZONE=Asia/Kolkata
TIMEZONE_OFFSET=+05:30

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURITY=tls
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password_here
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_FROM_NAME=HospiLink Hospital
EMAIL_ENABLED=true

# Google Gemini AI API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_ENDPOINT=https://generativelanguage.googleapis.com/v1beta/models/gemini-flash-latest:generateContent

# Application Settings
APP_NAME=HospiLink
APP_ENV=development
APP_DEBUG=true

# Setup Instructions:
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual credentials in .env
# 3. For Gmail App Password: https://myaccount.google.com/apppasswords
# 4. For Gemini API Key: https://makersuite.google.com/app/apikey
